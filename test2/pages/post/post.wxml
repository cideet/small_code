<view>
  <swiper indicator-dots="true" autoplay="true" interval="3000" vertical="{{false}}" circular="true">
    <swiper-item>
      <image src="/images/img3.jpg"></image>
    </swiper-item>
    <swiper-item>
      <image src="/images/img2.jpg"></image>
    </swiper-item>
    <swiper-item>
      <image src="/images/img1.jpg"></image>
    </swiper-item>
  </swiper>
  <!-- <block wx:for="{{post_content}}" wx:for-item="item" wx:for-index="index" wx:key="key"> -->
  <block wx:for="{{post_content}}">
    <view catchtap="onPostTap">
      <template is="postItem" data="{{...item}}" />
    </view>
  </block>
</view>