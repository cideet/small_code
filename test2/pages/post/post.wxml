<view>
  <swiper indicator-dots="true" autoplay="true" interval="3000" vertical="{{false}}" circular="true">
    <swiper-item>
      <image src="/images/img3.jpg"></image>
    </swiper-item>
    <swiper-item>
      <image src="/images/img2.jpg"></image>
    </swiper-item>
    <swiper-item>
      <image src="/images/img1.jpg"></image>
    </swiper-item>
  </swiper>
  <block wx:for="{{post_content}}" wx:for-item="item" wx:for-index="index">
    <view class="post-container">
      <view class="post-author-date">
        <image class="post-author" src="{{item.author_img}}"></image>
        <text class="post-date">{{item.date}}</text>
      </view>
      <text class="post-title">{{item.title}} - {{index+1}}</text>
      <image class="post-image" src="{{item.post_img}}"></image>
      <text class="post-content">{{item.content}}</text>
      <view class="post-like">
        <image class="post-like-image" src="/images/img2.jpg"></image>
        <text class="post-like-font">{{item.view_num}}</text>
        <image class="post-like-image" src="/images/img3.jpg"></image>
        <text class="post-like-font">{{item.collect_num}}</text>
      </view>
    </view>
  </block>
</view>